    <script>
        document.getElementById("upload_content_button").addEventListener("click", function (event) {
            event.preventDefault(); // 폼 전송을 막음

            var boardSelect = document.getElementById("board-select").value; // 게시판 선택값 가져오기
            var title = document.getElementById("title").value; // 제목 입력값 가져오기
            var content = document.getElementById("content_area").value;
            var image = document.getElementById("image").files[0]; // 파일 객체 가져오기
            var formData = new FormData();
            formData.append('board', boardSelect);
            formData.append('title', title);
            formData.append('content', content);
            formData.append('image', image);

            fetch('/write-post-page', {
                method: 'POST',
                body: formData

            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // 글쓰기 성공
                        alert('글쓰기 완료');
                        window.location.href = '/index';
                    } else {
                        // 글쓰기 실패
                        alert('글쓰기 실패');
                        window.location.href = '/write-post-page';
                    }
                })
                .catch(error => {
                    console.error('오류 발생:', error);
                });
